<section id="cart_items">
  <div class="container">
      <div class="row">
      <div class="col-md-7">
        <div class="shopper-informations">
            <div class=" clearfix">
              <div class="bill-to">
                <h2 >Bill To</h2>
            <form>
              <div class="form-one">
                <form>
                  <label>E-mail</label>
                  <input type="text" name="email" placeholder="Email *" value="<%= current_user.email %>">
                  <label>Phone Number</label>
                  <input type="text" name="phone_no" placeholder="Phone No *" value="<%= current_user.phone_no %>">
                </form>
              </div>
              <div class="form-two">
                <form>
                  <label>Address</label>
                  <input type="text" name="address" placeholder="Address *" value="<%= current_user.address%>">
                  <input type="text" name="landmark" placeholder="Landmark *" value="<%= current_user.landmark%>">
                  <input type="text" name="city" placeholder="City *" value="<%= current_user.city%>">
                </form>
              </div>
                  <%#= form_with url: users_path, method: 'post' do |form| %>
                                    <%# <button type="submit" class="btn btn-fefault cart">
                                        <i class=""></i> Conform Order
                                    </button> %>
                                <%# end %>
                    <%= link_to root_path do  %>
                              <button type="submit" class="btn btn-fefault cart">Home Page</button>
                  <%end %>
            </form>
                </div>
            </div>
        </div>
      </div><br>
      <br>
      <br>
      <div class="col-md-5">
        <table class="table table-condensed total-result">
          <% 
            total_sum=0
            @carts.each do |cart|
                qty=cart.food.price * cart.quantity
              total_sum += qty
            end
          %>
          <h3>Cash on Delivery</h3>
          <div class="row">
          <div class="col-6">
              <h4><strong>Total</strong></h4>
          </div>

          <div class="col-6">
              <h4 class="text-right">Rs.<%= total_sum%></h4>
          </div>
      </div>
  </li>

  <li class="list-group-item" style="margin:0 0 -1px">
      <div class="row">
          <div class="col-6">
              <strong>Sub-Total</strong>
          </div>

          <div class="col-6">
              <h5 class="text-right">Rs.<%= total_sum%></h5>
          </div>
      </div>
        </table>
      </div>
    </div>
    </div>
</section> <!--/#cart_items-->