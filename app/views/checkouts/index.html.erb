<section class="section section-bg" id="call-to-action"
style="background-image: url(<%= asset_path 'banner-image-1-1920x500.jpg' %>")

<div class="container">
    <div class="row">
        <div class="col-lg-10 offset-lg-1">
            <div class="cta-content">
                <br>
                <br>
                <h2>Easy <em>Checkout</em></h2>
            </div>
        </div>
    </div>
</div>
</section>

<section class="section">
<div class="container">
    <br>
    <br>
    <div class="row">
        <div class="col-md-8">
            <div class="contact-form">
                <form id="contact" action="" method="post">
                    <div class="row">
                    
                        <div class="col-sm-6 col-xs-12">
                        <input type="text" placeholder="First Name *" value="<%= current_user.first_name %>">
                        </div>
                        <div class="col-sm-6 col-xs-12">
                        <input type="text" placeholder="Middle Name *" value="<%= current_user.middle_name %>">
                        </div>
                    </div>
                    <div class="row">
                       
                        <div class="col-sm-12 col-xs-12">
                        <input type="text" placeholder="Surname *" value="<%= current_user.last_name %>">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 col-xs-12">
                        <h4 class="text-secondary">Address :</h4>
                        <input type="text" placeholder="Address *" value="<%= current_user.address%>">
                        </div>
                        
                    </div>
                    <div class="row">
                    <div class="col-sm-12 col-xs-12">
                    <input type="text" placeholder="Email *" value="<%= current_user.email %>">
                    </div>
                    
                    
                </div>
                    <div class="row">
                        <div class="col-sm-6 col-xs-12">
                        <input type="text" placeholder="City *" value="<%= current_user.city%>">
                        </div>
                        <div class="col-sm-6 col-xs-12">
                        <input type="text" placeholder="State *" value="<%= current_user.state%>">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6 col-xs-12">
                        <input type="text" placeholder="Pin Code *" value="<%= current_user.pin_code%>">
                        </div>
                        <div class="col-sm-6 col-xs-12">
                        <input type="text" placeholder="Country *" value="<%= current_user.country%>">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6 col-xs-12">
                            <label>Payment method</label>

                            <select>
                                <option value="">-- Choose --</option>
                                <option value="bank">Bank account</option>
                                <option value="cash">Cash</option>
                                <option value="paypal">PayPal</option>
                            </select>
                        </div>

                        
                    </div>

                    <div class="row">
                        <div class="col-lg-12">
                            <div class="main-button">
                                <div class="float-left">
                                 
                                    <%= link_to "Back", carts_path%>
                                    
                                </div>

                                <div class="float-right">
                                    <a href="#">Finish</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

            <br>
        </div>

        <div class="col-md-4">
          

                <li class="list-group-item" style="margin:0 0 -1px">
                    <div class="row">
                        <div class="col-6">
                            <h4><strong>Total</strong></h4>
                        </div>

                        <div class="col-6">
                            <h4 class="text-right"> 138.00</h4>
                        </div>
                    </div>
                </li>

                <li class="list-group-item" style="margin:0 0 -1px">
                    <div class="row">
                        <div class="col-6">
                            <strong>Sub-Total</strong>
                        </div>

                        <div class="col-6">
                            <h5 class="text-right">138.00</h5>
                        </div>
                    </div>
                </li>
            </ul>

            <br>
        </div>
    </div>
</div>
</section>